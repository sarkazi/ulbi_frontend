{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    
    "plugins": [
      {
      "name": "typescript-plugin-css-modules"
      }
]
  },
  
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}